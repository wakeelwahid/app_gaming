modules = ["nodejs-20"]
run = "npm run start"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run start"]

[workflows]
runButton = "Start Expo Web"

[[workflows.workflow]]
name = "Start Expo App"
author = 45060558
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --port 8081 --tunnel"

[[workflows.workflow]]
name = "Start Expo Web"
author = 42554831
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --web --port 8081 --host lan"

[[workflows.workflow]]
name = "Start Expo Tunnel"
author = 42554831
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --port 8081 --tunnel --web"

[[workflows.workflow]]
name = "Start Expo Tunnel Web"
author = 45095610
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --web --port 8081 --tunnel"

[[ports]]
localPort = 8081
externalPort = 80
exposeLocalhost = true
